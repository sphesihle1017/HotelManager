                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Admin">
                                    <i class="fas fa-door-closed me-1"></i>Room Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Admin">
                                    <i class="fas fa-calendar-check me-1"></i>Bookings
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="User">
                                    <i class="fas fa-calendar-alt me-1"></i>Reservations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="User">
                                    <i class="fas fa-map-marker-alt me-1"></i>Locations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="User">
                                    <i class="fas fa-users me-1"></i>Users
                                </a>
                            </li>
                        }
               @*          else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#about">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#rooms">
                                    Our Rooms & Suites
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#services">
                                    Hotel Services
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact">
                                    Enquires
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#testimonials">
                                    Testimonials
                                </a>
                            </li>
                        } *@
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-white mb-3">Azure Heights Hotel</h5>
                    <p class="text-white-50">Luxury redefined. Experience the pinnacle of hospitality.</p>
                    <div class="social-icons mt-3">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-1">
                        <i class="fas fa-map-marker-alt me-2"></i>123 Luxury Avenue, Metropolis City
                    </p>
                    <p class="mb-1">
                        <i class="fas fa-phone me-2"></i>+1 (555) 123-4567
                    </p>
                    <p class="mb-3">
                        <i class="fas fa-envelope me-2"></i>reservations@azureheightshotel.com
                    </p>
                </div>
            </div>
            <hr class="my-4" style="border-color: gray;">
       
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Add scroll effect to navbar
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.style.backgroundColor = 'rgba(26, 60, 64, 0.98)';
                header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.15)';
            } else {
                header.style.backgroundColor = 'rgba(26, 60, 64, 0.95)';
                header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.1)';
            }
        });

        // Set active nav link
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>