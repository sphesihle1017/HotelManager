                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#about">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#rooms">Our Rooms & Suites</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#services">Hotel Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact">Enquiries</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Admin menu items -->
