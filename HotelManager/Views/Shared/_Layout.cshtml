                                <a class="nav-link" asp-controller="Dashboard" asp-action="Admin">
                                    <i class="fas fa-user-shield me-1"></i>Admin Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Rooms">
                                    <i class="fas fa-door-closed me-1"></i>Room Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="ManageCustomers">
                                    <i class="fas fa-users me-1"></i>Customers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Bookings">
