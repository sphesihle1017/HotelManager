@model IEnumerable<Room>
@{
    ViewData["Title"] = "Room Management";
    Layout = "_Layout";
  
}

<div class="container mt-4">
    <h1 class="mb-4">Room Management</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">All Rooms</h4>
            <a asp-action="CreateRoom" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Room
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Hotel</th>
                            <th>Room Type</th>
                            <th>Price/Night</th>
                            <th>Total Bookings</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>@room.Hotel?.Name</td>
                                <td>@room.RoomDescription</td>
                                <td>R @room.PricePerNight.ToString("N2")</td>

                                <td>
                                    <span class="badge bg-info">@(room.Bookings?.Count ?? 0)</span>
                                </td>
                                <td>
                                    <a asp-action="EditRoom" asp-route-id="@room.RoomId"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-action="DeleteRoom" asp-route-id="@room.RoomId"
                                          method="post" style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this room?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    footer {
        display: none !important;
    }
</style>
