@model Room
@{
    ViewData["Title"] = "Create Room";
    Layout = "_Layout";
    ViewBag.HideFooter = true;
}

<div class="container mt-4">
    <h1 class="mb-4">Create New Room</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Room Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRoom" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="HotelId" class="control-label">Hotel</label>
                            <select asp-for="HotelId" class="form-control" asp-items="@(new SelectList(ViewBag.Hotels, "HotelId", "Name"))">
                                <option value="">-- Select Hotel --</option>
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomDescription" class="control-label">Room Type</label>
                            <select asp-for="RoomDescription" class="form-control">
                                <option value="">-- Select Room Type --</option>
                                <option value="Deluxe">Deluxe</option>
                                <option value="Premium">Premium</option>
                                <option value="Presidential">Presidential</option>
                            </select>
                            <span asp-validation-for="RoomDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PricePerNight" class="control-label">Price Per Night</label>
                            <input asp-for="PricePerNight" class="form-control" />
                            <span asp-validation-for="PricePerNight" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Room
                            </button>
                            <a asp-action="Rooms" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    footer {
        display: none !important;
    }
</style>  
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}