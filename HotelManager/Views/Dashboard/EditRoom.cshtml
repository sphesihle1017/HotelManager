@model Room
@{
    ViewData["Title"] = "Edit Room";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Room</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Edit Room Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditRoom" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RoomId" />

                        <div class="form-group mb-3">
                            <label asp-for="HotelId" class="control-label">Hotel</label>
                            <select asp-for="HotelId" asp-items="@(new SelectList(ViewBag.Hotels, "HotelId", "Name"))"
                                    class="form-control">
                                <option value="">-- Select Hotel --</option>
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomDescription" class="control-label">Room Type</label>
                            <select asp-for="RoomDescription" class="form-control">
                                <option value="">-- Select Room Type --</option>
                                <option value="Deluxe">Deluxe</option>
                                <option value="Premium">Premium</option>
                                <option value="Presidential">Presidential</option>
                            </select>
                            <span asp-validation-for="RoomDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PricePerNight" class="control-label">Price Per Night</label>
                            <input asp-for="PricePerNight" class="form-control" />
                            <span asp-validation-for="PricePerNight" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Update Room
                            </button>
                            <a asp-action="Rooms" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>