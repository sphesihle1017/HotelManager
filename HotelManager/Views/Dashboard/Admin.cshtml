@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Admin Options</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="ManageCustomers" class="btn btn-outline-primary btn-lg btn-block">
                                <i class="bi bi-people"></i> Manage Customers
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Rooms" class="btn btn-outline-success btn-lg btn-block">
                                <i class="bi bi-door-open"></i> Manage Rooms
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="CreateRoom" class="btn btn-outline-warning btn-lg btn-block">
                                <i class="bi bi-plus-circle"></i> Create New Room
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs" id="adminTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="customers-tab" data-bs-toggle="tab" data-bs-target="#customers"
                type="button" role="tab">
                <i class="bi bi-people"></i> Customers
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="rooms-tab" data-bs-toggle="tab" data-bs-target="#rooms" type="button"
                role="tab">
                <i class="bi bi-door-open"></i> Rooms
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="adminTabContent">
        <!-- Customers Panel -->
        <div class="tab-pane fade show active" id="customers" role="tabpanel">
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Customer Management</h4>
                    <a asp-action="ManageCustomers" class="btn btn-sm btn-primary">View All Customers</a>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage customer accounts, view their booking history, and handle
                        account-related issues.</p>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Email</th>
                                    <th>Total Bookings</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        No customers found. (Database integration pending)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rooms Panel -->
        <div class="tab-pane fade" id="rooms" role="tabpanel">
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Room Management</h4>
                    <div>
                        <a asp-action="CreateRoom" class="btn btn-sm btn-success">
                            <i class="bi bi-plus-circle"></i> Add New Room
                        </a>
                        <a asp-action="Rooms" class="btn btn-sm btn-primary">View All Rooms</a>
                    </div>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage hotel rooms - create, edit, delete, and update room availability.</p>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Room Number</th>
                                    <th>Room Type</th>
                                    <th>Price</th>
                                    <th>Availability</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        No rooms found. (Database integration pending)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-success">
                <h5><i class="bi bi-shield-check"></i> Admin Panel</h5>
                <p>As an administrator, you have full control over:</p>
                <ul>
                    <li><strong>Customer Management:</strong> View, edit, and delete customer accounts</li>
                    <li><strong>Room Management:</strong> Create new rooms, edit existing ones, and delete rooms</li>
                    <li><strong>Booking Management:</strong> View and manage all bookings in the system</li>
                </ul>
            </div>
        </div>
    </div>
</div>